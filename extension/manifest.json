{
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "The Session Sanctum"
  },
  "name": "The Session Sanctum",
  "description": "Session recorder for user experience testing",
  "version": "0.4.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["extension.js"],
    "persistent": false
  },
  "externally_connectable": {
    "matches": ["https://sessionsanctum.com/*"]
  },
  "permissions": ["desktopCapture"]
}
